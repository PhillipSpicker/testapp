<div class="container form-new">

  <%= form_for(product) do |f| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>



    <div class="form-group row">
      <%= f.label :name, class: "control-label" %> <br>
      <%= f.text_field :name, class: "form-control col-sm-8", placeholder: "Product Name"%>
    </div> <br>

    <div class="form-group row"> 
      <%= f.label :description %> <br>
      <%= f.text_area :description, class: "form-control col-sm-8", placeholder: "Product Description" %>
    </div> <br>

    <div class="form-group row">
      <%= f.label :image_url %> <br>
      <%= f.text_field :image_url, class: "form-control col-xm-8", placeholder: "Product Image URL" %>
    </div> <br>

    <div class="form-group row">
      <%= f.label :price %> <br>
      <%= f.text_field :price, class: "form-control col-xm-8", placeholder: "Product Price" %>
    </div> <br>

    <div class="form-group row">
      <%= button_tag("Submit", class: "btn btn-default") %>
    </div>
  <% end %>

</div> <!-- end of form-new -->
