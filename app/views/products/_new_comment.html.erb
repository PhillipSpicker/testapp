<% if signed_in? %>
  <div class="form-new">
  <h4 class="row">Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    
      <div class="form-group row">
        <%= f.label :body, "Comments", class: "controll-label" %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group row">
        <div class="rating"></div>
      </div>

      <div class="form-group row">
        <%= button_tag("Submit", class: "btn btn-default") %>
      </div>
  </div>
  <% end %>
<% end %>
